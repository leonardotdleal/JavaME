import javax.microedition.lcdui.Canvas;
import javax.microedition.lcdui.Graphics;


public class MyCanvas extends Canvas {
	
	private boolean cleanDisplay = false;
	private Picture figura;
	
	public MyCanvas() {
		figura = new Picture(getWidth(),getHeight());
	}

	protected void paint(Graphics graphic) {
		if (cleanDisplay == true) {
			graphic.setColor(255, 255, 255);
			graphic.fillRect(0, 0, getWidth(), getHeight());
			cleanDisplay = false;
		}
		
		figura.paint(graphic); 
	}
	
	protected void limpaTela(Graphics graphic) {
		graphic.setColor(255,255,255);
		graphic.fillRect(0, 0, getWidth(), getHeight());
	}
	
	/*
	protected void paint(Graphics g) 
	{
		//rotina que "limpa a tela".
		g.setColor(255, 255, 255);
		//fillRect(int x, int y, int width, int height) 
		g.fillRect(0, 0, getWidth(), getHeight());
		//
		canhao.paint(g);
		tiro.paint(g);
		
	}
	 * */
	
	protected void keyPressed(int keyCode) {
		super.keyPressed(keyCode);
		
		switch (keyCode) {
		case KEY_STAR:
			cleanDisplay = true;
			break;
		case KEY_NUM2:
			figura.y -= 5;
			cleanDisplay = true;
			break;
		case KEY_NUM4:
			figura.x -= 5;
			cleanDisplay = true;
			break;
		case KEY_NUM6:
			figura.x += 5;
			cleanDisplay = true;
			break;
		case KEY_NUM8:
			figura.y += 5;
			cleanDisplay = true;
			break;
		default:
			break;
		}
		repaint();
	}

}
